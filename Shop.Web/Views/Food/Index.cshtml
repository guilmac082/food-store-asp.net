@model Shop.Web.Models.Food.FoodIndexModel

<div class="container body-content">
    <div class="row foodHeader">
        <div class="foodHeading">
            <span class="foodIndexName">
                @Model.Name
            </span>
            <span id="headingBtn"><a asp-controller="Category" asp-action="Topic" asp-route-id="@Model.CategoryId" class="btn btn-back">Back to @Model.CategoryName section</a></span>
        </div>
    </div>

    <div class="row" id="foodIndexContent">
        <div class="col-md-9 foodContentContainer">
            <div class="categoryLogo" style="background-image: url(@Model.ImageUrl); background-size:100%; width:360px;height:240px"></div>
            <div class="foodContent">
                @Html.Raw(Model.Description)
            </div>
        </div>
        <div class="col-md-3">
            <div class="btn-addToCart">
                <div class="categoryPrice">@Model.Total</div>
                <form asp-controller="ShoppingCart" asp-action="AddToShoppingCart"  method="get" class="form-horizontal" role="form">
                    <a onclick="changeValue(document.getElementById('amount-input-'+@Model.Id.ToString()), 1)"><i class="fas fa-plus-circle"></i></a>
                    <input id="amount-input-@Model.Id" asp-for="Amount" style="width:20%" type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');">
                    <a onclick="changeValue(document.getElementById('amount-input-'+@Model.Id.ToString()), -1)"><i class="fas fa-minus-circle"></i></a>
                    <div class="btn-cart">
                        <input value="Add to cart" type="submit" class="btn btn-success" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.Id" asp-route-amount="@Model.Amount" >
                    </div>
                    <div>
                        <a class="btn btn-default">Edit</a>
                        <a class="btn btn-danger">Delete</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

