@model Shop.Web.Models.Food.FoodListingModel
@using System.Globalization

<div class="btn-addToCart">
    <div class="categoryPrice">@(Model.Price.ToString("c", CultureInfo.CreateSpecificCulture("en-US")))</div>
    <form asp-controller="ShoppingCart" asp-action="AddToShoppingCart"  method="get" class="form-horizontal" role="form">
        @*<input asp-for="@Model.Id" name="id" type="hidden" />*@
        <a onclick="changeValue(document.getElementById('amount-input'), 1)"><i class="fas fa-plus-circle"></i></a>
        <input asp-for="Amount" style="width:20%" type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" id="amount-input-@Model.Id">
        <a onclick="changeValue(document.getElementById('amount-input'), -1)"><i class="fas fa-minus-circle"></i></a>
        <div class="btn-cart">
            <input value="Add to cart" type="submit" class="btn btn-success" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.Id" asp-route-amount="@Model.Amount" >
        </div>
    </form>
</div>

<div class="foodData">
    <div class="foodName">
        <div class="categoryLogo" style="background-image: url(@Model.ImageUrl); background-size:99%;"></div>
        <a class="btn btn-info" asp-controller="Food" asp-action="Index" asp-route-id="@Model.Id">
            @Model.Name
        </a>
    </div>
</div>